<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".GameMain"
    android:layoutDirection="ltr">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:fontFamily="@font/one_crayon"
        android:textSize="70sp"
        android:textColor="@color/black"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25sp">

        <TextView
            android:id="@+id/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/one_crayon"
            android:gravity="center"
            android:text="Player1"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/one_crayon"
            android:gravity="center"
            android:text="X"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/p1"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="@+id/p1"
            app:layout_constraintTop_toBottomOf="@+id/p1"
            app:layout_constraintVertical_bias="0.0"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/one_crayon"
            android:gravity="center"
            android:text="Player2"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/p1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/one_crayon"
            android:gravity="center"
            android:text="O"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="@+id/p2"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="@+id/p2"
            app:layout_constraintTop_toBottomOf="@+id/p2"
            app:layout_constraintVertical_bias="0.0"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/one_crayon"
            android:text="Turn"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/p2"
            app:layout_constraintStart_toEndOf="@+id/p1"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="320sp"
        android:layout_height="100sp"
        android:gravity="center">

            <Button
            android:id="@+id/b1"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_margin="2sp"
            android:onClick="b1"
            android:textSize="45sp"
            android:background="@color/black"
           />


        <Button
            android:id="@+id/b2"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_margin="2sp"
            android:onClick="b2"
            android:textSize="45sp"
            android:background="@color/black"

            />

        <Button
            android:id="@+id/b3"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_margin="2sp"
            android:onClick="b3"
            android:textSize="45sp"
            android:background="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="320sp"
        android:layout_height="100sp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/b4"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_margin="2sp"
            android:onClick="b4"
            android:textSize="45sp"
            android:background="@color/black"

            />

        <Button
            android:id="@+id/b5"

            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_margin="2sp"
            android:onClick="b5"
            android:textSize="45sp"
            android:background="@color/black"

            />

        <Button
            android:id="@+id/b6"

            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_margin="2sp"
            android:onClick="b6"
            android:textSize="45sp"
            android:background="@color/black"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="320sp"
        android:layout_height="100sp"
        android:gravity="center">

        <Button
            android:id="@+id/b7"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_margin="2sp"
            android:onClick="b7"
            android:textSize="45sp"
            android:background="@color/black"

            />

        <Button
            android:id="@+id/b8"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_margin="2sp"
            android:onClick="b8"
            android:textSize="45sp"
            android:background="@color/black"
            />

        <Button
            android:id="@+id/b9"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_margin="2sp"
            android:onClick="b9"
            android:textSize="45sp"
            android:background="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play again"
            android:layout_margin="15sp"
            android:onClick="playAgain"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Menu"
            android:layout_margin="15sp"
            android:onClick="mainMenu"

            />


    </LinearLayout>

</LinearLayout>